<% if(typeof user !== "undefined") { %>
	<div class="" id="navbar">
		<div id="linksection">
			<div style="display:table;width:100%;height:190px;">
				<div style="display:table-cell;vertical-align:bottom;">
					<div class="ui container" style="text-align:center;">
						<form class="ui form" action="/new/link" method="post">
							<div class="field">
								<label>Image URL</label>
								<input placeholder="Image URL" type="text" name="image">
							</div>
							<div class="field">
								<label>Tags</label>
								<input placeholder="Tags" type="text" name="tags">
							</div>
							<button class="ui primary button" type="submit">Send</button>
						</form>
					</div>
				</div>
			</div>
		</div>

		<div class="ui secondary pointing menu" style="margin-top: 0;">
			<a href="/" class="item">
				<img src="/favicon.ico" class="ui avatar image"/>
			</a>
			<a class="item" id="addlink">
				<img src="/img/plus.png" class="ui avatar image"/>
			</a>
			<div class="right menu">
				<a href="#" class="item ">
					<img class="ui bordered avatar image" src="<%= user.twitter.image %>"/>
				</a>
				<a href="/logout" class="active item icon ">
					<img class="ui avatar image" src="/img/logout.png"/>
				</a>
			</div>
		</div>

	</div>
<% } else { %>
	<div class="ui borderless top fixed large inverted menu">
		<a href="/" class="header item navitem">
			<img src="/favicon.ico" class="ui avatar image"/>
		</a>
		<div class="right menu">
			<a class="active item icon navitem" tabindex="0" id="loginButton" href="/auth/twitter">
				<i class="large twitter icon" style="padding-right: 0.5em"></i>
				<span>Login</span>
			</a>
		</div>
	</div>
<% } %>
